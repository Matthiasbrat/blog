---
import { ViewTransitions } from 'astro:transitions';
import { getSiteConfig, getNavItems } from '../lib/sections';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  article?: boolean;
}

const siteConfig = getSiteConfig();
const navItems = getNavItems();
const currentPath = Astro.url.pathname;

const { 
  title = siteConfig.site.title,
  description = siteConfig.site.description,
  article = false,
} = Astro.props;

const pageTitle = title === siteConfig.site.title ? title : `${title} — ${siteConfig.site.title}`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={description}>
  
  <!-- Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:type" content={article ? 'article' : 'website'}>
  
  <ViewTransitions />
</head>
<body>
  <nav class="nav">
    <div class="nav-inner">
      <a href="/" class="nav-logo">{siteConfig.site.title}</a>
      <ul class="nav-links">
        {navItems.map(item => (
          <li>
            <a 
              href={item.href}
              class:list={['nav-link', { active: currentPath.startsWith(item.href) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
        <li>
          <a href="/search" class="nav-link">Search</a>
        </li>
      </ul>
    </div>
  </nav>
  
  <main>
    <slot />
  </main>
  
  <footer class="footer">
    <div class="footer-inner">
      <div class="footer-brand">
        <div class="footer-brand-name">{siteConfig.site.title}</div>
        <p class="footer-brand-desc">Writing about code, sharing knowledge, and connecting with great people.</p>
      </div>
      <div class="footer-section">
        <h4>Content</h4>
        <ul class="footer-links">
          <li><a href="/blog">Blog</a></li>
          <li><a href="/docs">Documentation</a></li>
          <li><a href="/projects">Projects</a></li>
        </ul>
      </div>
      <div class="footer-section">
        <h4>Connect</h4>
        <ul class="footer-links">
          <li><a href="/referrals">People</a></li>
          <li><a href="/rss.xml">RSS Feed</a></li>
          <li><a href="https://github.com" target="_blank">GitHub</a></li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom">
      <span>© {new Date().getFullYear()} {siteConfig.site.author}</span>
      <span>Built with Astro</span>
    </div>
  </footer>
</body>
</html>
