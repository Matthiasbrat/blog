---
import { ViewTransitions } from 'astro:transitions';
import { getSiteConfig } from '../lib/sections';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
  article?: boolean;
  publishDate?: Date;
  updatedDate?: Date;
}

const siteConfig = getSiteConfig();
const { 
  title = siteConfig.site.title,
  description = siteConfig.site.description,
  article = false,
  publishDate,
  updatedDate
} = Astro.props;

const pageTitle = title === siteConfig.site.title ? title : `${title} â€” ${siteConfig.site.title}`;
const canonicalUrl = new URL(Astro.url.pathname, siteConfig.site.url);
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{pageTitle}</title>
  <meta name="description" content={description}>
  <link rel="canonical" href={canonicalUrl}>
  
  <!-- Open Graph -->
  <meta property="og:title" content={title}>
  <meta property="og:description" content={description}>
  <meta property="og:url" content={canonicalUrl}>
  <meta property="og:type" content={article ? 'article' : 'website'}>
  
  {article && publishDate && (
    <meta property="article:published_time" content={publishDate.toISOString()}>
  )}
  {article && updatedDate && (
    <meta property="article:modified_time" content={updatedDate.toISOString()}>
  )}
  
  <ViewTransitions />
</head>
<body>
  <Nav />
  <main class="container">
    <slot />
  </main>
  <Footer />
</body>
</html>

<style>
  main {
    min-height: 60vh;
  }
</style>
