---
interface Props {
  name: string;
  title: string;
  description?: string;
  links?: Array<{ type: string; url: string }>;
}

const { name, title, description, links = [] } = Astro.props;
---

<li class="person-item">
  <div>
    <span class="person-name">{name}</span>
    <span class="person-title"> Â· {title}</span>
  </div>
  {description && <p class="person-description">{description}</p>}
  {links.length > 0 && (
    <div class="person-links">
      {links.map(link => (
        <a href={link.url} target="_blank" rel="noopener">{link.type}</a>
      ))}
    </div>
  )}
</li>
