---
interface Props {
  name: string;
  title: string;
  description?: string;
  links?: Array<{ type: string; url: string }>;
}

const { name, title, description, links = [] } = Astro.props;
---

<li class="person">
  <strong>{name}</strong>, {title}
  {description && <span class="description"> â€” {description}</span>}
  {links.length > 0 && (
    <span class="links">
      [{links.map((link, i) => (
        <><a href={link.url} target="_blank" rel="noopener">{link.type}</a>{i < links.length - 1 && ', '}</>
      ))}]
    </span>
  )}
</li>

<style>
  .person {
    margin-bottom: var(--space-md);
    line-height: 1.5;
  }
  
  .description {
    color: var(--color-text-muted);
  }
  
  .links {
    font-size: 0.875rem;
  }
  
  .links a {
    color: var(--color-text-muted);
  }
</style>
