---
import { getNavItems, getSiteConfig } from '../lib/sections';

const navItems = getNavItems();
const siteConfig = getSiteConfig();
const currentPath = Astro.url.pathname;
---

<header class="header">
  <nav class="nav">
    <a href="/" class="site-title">{siteConfig.site.title}</a>
    <ul class="nav-links">
      {navItems.map(item => (
        <li>
          <a 
            href={item.href} 
            class:list={{ active: currentPath.startsWith(item.href) }}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<style>
  .header {
    border-bottom: 1px solid var(--color-border);
    margin-bottom: var(--space-xl);
  }
  
  .nav {
    max-width: var(--max-width);
    margin: 0 auto;
    padding: var(--space-md);
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    flex-wrap: wrap;
    gap: var(--space-md);
  }
  
  .site-title {
    font-size: 1.125rem;
    text-decoration: none;
    font-weight: normal;
  }
  
  .nav-links {
    display: flex;
    gap: var(--space-lg);
    font-size: 0.9375rem;
  }
  
  .nav-links a {
    color: var(--color-text-muted);
    text-decoration: none;
  }
  
  .nav-links a:hover,
  .nav-links a.active {
    color: var(--color-text);
  }
</style>
