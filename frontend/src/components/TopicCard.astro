---
interface Props {
  title: string;
  description?: string;
  href: string;
  count?: number;
}

const { title, description, href, count } = Astro.props;
---

<li class="topic-item">
  <a href={href}>{title}</a>
  {count !== undefined && <span class="count">{count} posts</span>}
  {description && <span class="description">{description}</span>}
</li>
