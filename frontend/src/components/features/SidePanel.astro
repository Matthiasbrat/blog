---
interface Props {
  items: Array<{
    heading: string;
    anchor: string;
    children?: Array<{ heading: string; anchor: string }>;
  }>;
}

const { items } = Astro.props;
---

<nav class="side-panel" aria-label="Table of contents">
  <h2 class="side-panel-title">On this page</h2>
  <ol class="toc-list">
    {items.map(item => (
      <li class="toc-item">
        <a href={item.anchor} class="toc-link">{item.heading}</a>
        {item.children && item.children.length > 0 && (
          <ol class="toc-sublist">
            {item.children.map(child => (
              <li class="toc-subitem">
                <a href={child.anchor} class="toc-link">{child.heading}</a>
              </li>
            ))}
          </ol>
        )}
      </li>
    ))}
  </ol>
</nav>

<style>
  .side-panel {
    position: sticky;
    top: calc(var(--space-xl) + 60px);
    max-height: calc(100vh - 100px);
    overflow-y: auto;
    padding-right: var(--space-md);
  }
  
  .side-panel-title {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-md);
  }
  
  .toc-list {
    list-style: none;
    font-size: 0.875rem;
  }
  
  .toc-item {
    margin-bottom: var(--space-sm);
  }
  
  .toc-link {
    color: var(--color-text-muted);
    text-decoration: none;
    display: block;
    padding: var(--space-xs) 0;
    border-left: 2px solid transparent;
    padding-left: var(--space-sm);
    transition: color var(--transition-fast), border-color var(--transition-fast);
  }
  
  .toc-link:hover {
    color: var(--color-text);
    text-decoration: none;
  }
  
  .toc-link.active {
    color: var(--color-accent);
    border-left-color: var(--color-accent);
  }
  
  .toc-sublist {
    list-style: none;
    margin-top: var(--space-xs);
    padding-left: var(--space-md);
  }
  
  .toc-subitem {
    margin-bottom: var(--space-xs);
  }
  
  .toc-sublist .toc-link {
    font-size: 0.8125rem;
    border-left: none;
    padding-left: 0;
  }
</style>

<script>
  const observerOptions = {
    rootMargin: '-100px 0px -66%',
    threshold: 0
  };
  
  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      const id = entry.target.getAttribute('id');
      const link = document.querySelector(`.toc-link[href="#${id}"]`);
      
      if (entry.isIntersecting) {
        document.querySelectorAll('.toc-link.active').forEach(el => el.classList.remove('active'));
        link?.classList.add('active');
      }
    });
  }, observerOptions);
  
  document.querySelectorAll('h2[id], h3[id]').forEach(heading => {
    observer.observe(heading);
  });
</script>