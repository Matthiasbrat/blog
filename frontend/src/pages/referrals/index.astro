  twitter: '<svg viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>'
};
---

<BaseLayout title="People" description={section?.description}>
  <section class="section">
    <div class="container">
      <div class="section-header" style="flex-direction: column; align-items: flex-start;">
        <h1 class="section-title" style="font-size: clamp(2rem, 4vw, 2.75rem);">People</h1>
        <p class="section-subtitle" style="max-width: 550px;">{section?.description}</p>
      </div>
    </div>
  </section>
  
  <section class="section" style="padding-top: 0;">
    <div class="container">
      <ul class="cards-grid">
        {people.map(person => (
          <li class="person-card">
            <div class="person-avatar">{getInitials(person.name)}</div>
            <div class="person-name">{person.name}</div>
            <div class="person-title">{person.title}</div>
            {person.description && <p class="person-bio">{person.description}</p>}
            {person.links && person.links.length > 0 && (
              <div class="person-links">
                {person.links.map(link => (
                  <a 
                    href={link.url} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="person-link"
                    aria-label={link.type}
                    set:html={linkIcons[link.type] || linkIcons.website}
                  />
                ))}
              </div>
            )}
          </li>
        ))}
      </ul>
    </div>
  </section>
</BaseLayout>
