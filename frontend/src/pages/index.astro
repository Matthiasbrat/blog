---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteConfig } from '../lib/sections';
import { getTopicsForSection, getContentForTopic } from '../lib/content';

const siteConfig = getSiteConfig();

// Get all blog posts
const blogTopics = getTopicsForSection('blog');
let allPosts: any[] = [];
for (const topic of blogTopics) {
  const posts = getContentForTopic('blog', topic.slug);
  allPosts = [...allPosts, ...posts.map(p => ({ ...p, topic: topic.slug, topicName: topic.name }))];
}
allPosts = allPosts.sort((a, b) => (b.date?.getTime() || 0) - (a.date?.getTime() || 0));

const featuredPosts = allPosts.slice(0, 3);
const recentPosts = allPosts.slice(0, 6);

// Topic styles
const topicStyles: Record<string, { icon: string; color: string }> = {
  javascript: { icon: '‚ö°', color: 'var(--pastel-orange)' },
  typescript: { icon: 'üî∑', color: 'var(--pastel-blue)' },
  rust: { icon: 'ü¶Ä', color: 'var(--pastel-pink)' },
};

function formatDate(d: Date): string {
  return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric' });
}
---

<BaseLayout>
  <!-- Hero -->
  <section class="hero container">
    <div class="hero-badge">
      <span class="hero-badge-dot"></span>
      Currently writing about TypeScript
    </div>
    <h1>Ideas, code, and the people who inspire me</h1>
    <p class="hero-subtitle">
      Welcome to my corner of the web. I write about programming, 
      share documentation, and highlight talented people.
    </p>
    <div class="hero-buttons">
      <a href="/blog" class="btn btn-primary">
        Read the Blog
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </a>
      <a href="/docs" class="btn btn-secondary">Browse Docs</a>
    </div>
  </section>
  
  <hr class="decorated">
  
  <!-- Featured Posts -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Featured</div>
        <h2 class="section-title">Latest Articles</h2>
        <p class="section-subtitle">Deep dives into programming topics</p>
      </div>
      
      <ul class="cards-grid cards-grid-narrow">
        {featuredPosts.map(post => {
          const style = topicStyles[post.topic] || { icon: 'üìù', color: 'var(--pastel-green)' };
          return (
            <li>
              <a href={`/blog/${post.topic}/${post.slug}`} class="post-card">
                <div class="post-card-header">
                  <span class="post-card-tag" style={`background: ${style.color}`}>{post.topicName}</span>
                  <span class="post-card-date">{formatDate(post.date)}</span>
                </div>
                <h3>{post.title}</h3>
                <p class="post-card-excerpt">{post.description}</p>
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </section>
  
  <!-- Topics -->
  <section class="section" style="background: var(--bg-soft);">
    <div class="container">
      <div class="section-header">
        <div class="section-label">Explore</div>
        <h2 class="section-title">Browse by Topic</h2>
        <p class="section-subtitle">Find articles organized by category</p>
      </div>
      
      <ul class="cards-grid cards-grid-narrow">
        {blogTopics.map(topic => {
          const posts = getContentForTopic('blog', topic.slug);
          const style = topicStyles[topic.slug] || { icon: 'üìù', color: 'var(--pastel-green)' };
          return (
            <li>
              <a href={`/blog/${topic.slug}`} class="topic-card" style={`--card-accent: ${style.color}`}>
                <div class="topic-card-icon">{style.icon}</div>
                <h3>{topic.name}</h3>
                <p class="topic-card-description">{topic.description}</p>
                <div class="topic-card-meta">
                  <span class="topic-card-count">{posts.length} articles ‚Üí</span>
                </div>
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </section>
  
  <!-- Recent Writing -->
  <section class="section">
    <div class="container-narrow">
      <div class="section-header">
        <div class="section-label">Archive</div>
        <h2 class="section-title">Recent Writing</h2>
        <p class="section-subtitle">All the latest posts in chronological order</p>
      </div>
      
      <div class="post-list-section">
        <ul class="post-list">
          {recentPosts.map(post => {
            const style = topicStyles[post.topic] || { icon: 'üìù', color: 'var(--pastel-green)' };
            return (
              <li class="post-item">
                <time datetime={post.date?.toISOString()}>{formatDate(post.date)}</time>
                <div class="post-item-content">
                  <a href={`/blog/${post.topic}/${post.slug}`}>{post.title}</a>
                  <p class="post-item-excerpt">{post.description}</p>
                </div>
                <span class="post-item-tag" style={`background: ${style.color}; color: var(--text-secondary)`}>{post.topicName}</span>
              </li>
            );
          })}
        </ul>
      </div>
      
      <div style="text-align: center; margin-top: var(--space-xl);">
        <a href="/blog" class="btn btn-secondary">View all posts ‚Üí</a>
      </div>
    </div>
  </section>
</BaseLayout>
