---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getSiteConfig } from '../lib/sections';
import { getTopicsForSection, getContentForTopic } from '../lib/content';

const siteConfig = getSiteConfig();

// Get all blog posts
const blogTopics = getTopicsForSection('blog');
let allPosts: any[] = [];
for (const topic of blogTopics) {
  const posts = getContentForTopic('blog', topic.slug);
  allPosts = [...allPosts, ...posts.map(p => ({ ...p, topic: topic.slug, topicName: topic.name }))];
}
allPosts = allPosts.sort((a, b) => (b.date?.getTime() || 0) - (a.date?.getTime() || 0));

const featuredPosts = allPosts.slice(0, 3);
const recentPosts = allPosts.slice(3, 9);

// Topic icons
const topicIcons: Record<string, string> = {
  javascript: '‚ö°',
  typescript: 'üî∑',
  rust: 'ü¶Ä',
  'getting-started': 'üöÄ',
  advanced: 'üéØ'
};

function formatDate(d: Date): string {
  return d.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
}
---

<BaseLayout>
  <!-- Hero -->
  <section class="hero">
    <div class="hero-content container">
      <div class="hero-badge">
        <span class="hero-badge-dot"></span>
        Currently writing about TypeScript
      </div>
      <h1>Ideas, code, and the people who inspire me</h1>
      <p class="hero-subtitle">
        Welcome to my corner of the web. I write about programming, share documentation, 
        and highlight the talented people I've worked with.
      </p>
      <div class="hero-buttons">
        <a href="/blog" class="btn btn-primary">
          Read the Blog
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
        <a href="/docs" class="btn btn-secondary">Browse Docs</a>
      </div>
    </div>
  </section>
  
  <!-- Featured Posts -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <div>
          <h2 class="section-title">Featured Articles</h2>
          <p class="section-subtitle">Deep dives into interesting topics</p>
        </div>
        <a href="/blog" class="section-link">
          View all posts
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M5 12h14M12 5l7 7-7 7"/>
          </svg>
        </a>
      </div>
      
      <ul class="cards-grid">
        {featuredPosts.map(post => (
          <li>
            <a href={`/blog/${post.topic}/${post.slug}`} class="post-card">
              <div class="post-card-date">{formatDate(post.date)}</div>
              <h3>{post.title}</h3>
              <p class="post-card-excerpt">{post.description}</p>
              <span class="post-card-tag">{post.topicName}</span>
            </a>
          </li>
        ))}
      </ul>
    </div>
  </section>
  
  <!-- Topics -->
  <section class="section" style="background: var(--bg-accent);">
    <div class="container">
      <div class="section-header">
        <div>
          <h2 class="section-title">Explore Topics</h2>
          <p class="section-subtitle">Browse by category</p>
        </div>
      </div>
      
      <ul class="cards-grid">
        {blogTopics.map(topic => {
          const posts = getContentForTopic('blog', topic.slug);
          return (
            <li>
              <a href={`/blog/${topic.slug}`} class="topic-card">
                <div class="topic-card-icon">{topicIcons[topic.slug] || 'üìù'}</div>
                <h3>{topic.name}</h3>
                <p class="topic-card-description">{topic.description}</p>
                <div class="topic-card-meta">
                  <span class="topic-card-count">{posts.length} articles</span>
                </div>
              </a>
            </li>
          );
        })}
      </ul>
    </div>
  </section>
  
  <!-- Recent Posts -->
  <section class="section">
    <div class="container">
      <div class="section-header">
        <div>
          <h2 class="section-title">Recent Writing</h2>
          <p class="section-subtitle">Latest thoughts and tutorials</p>
        </div>
      </div>
      
      <div class="content-container">
        <ul class="post-list">
          {recentPosts.map(post => (
            <li class="post-item">
              <time datetime={post.date?.toISOString()}>{formatDate(post.date)}</time>
              <a href={`/blog/${post.topic}/${post.slug}`}>{post.title}</a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </section>
</BaseLayout>
